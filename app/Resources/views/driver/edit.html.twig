{% extends 'base.html.twig' %}

{% block style %}
    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data"
                  action="{{ path('driver_edit', {'id': driver.id}) }}" method="POST">
                <fieldset>
                    <legend>Редактиране на шофьор</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="driver_fullName">Имена</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="driver_fullName" placeholder="Имена"
                                   name="driver[fullName]" value="{{ driver.fullName }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="driver_age">Години</label>
                        <div class="col-sm-6">
                            <label>
                                <select name="driver[age]">
                                    {% for age in range(driver.age, 100) %}
                                        <option value="{{ age }}">{{ age }}</option>
                                    {% endfor %}
                                </select>
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="driver_quote">Фраза</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="driver_quote" placeholder="Фраза"
                                   name="driver[quote]" value="{{ driver.quote }}">
                        </div>
                    </div>

                    {% if driver.image %}
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="driver_image">Изображение</label>
                            <div class="col-sm-4 ">
                                <input type="file" accept=".jpg, .png, .jpeg" class="form-control" id="driver_image" placeholder="Image"
                                       name="driver[image]">
                            </div>
                        </div>
                    {% endif %}

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{path('homepage')}}">Обратно</a>
                            <button type="submit" class="btn btn-primary">Редактиране</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}



