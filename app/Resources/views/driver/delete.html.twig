{% extends 'base.html.twig' %}

{% block style %}
    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('driver_delete', {'id': driver.id}) }}" method="POST">
                <fieldset>
                    <legend>Изтриване на шофьор</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="driver_fullName">Имена</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" readonly id="driver_fullName" placeholder="Имена"
                                   name="driver[fullName]" value="{{ driver.fullName }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="driver_quote">Фраза</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" readonly id="driver_quote" placeholder="Фраза"
                                   name="driver[quote]" value="{{ driver.quote }}">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Обратно</a>
                            <button type="submit" class="btn btn-danger">Изтриване</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}


