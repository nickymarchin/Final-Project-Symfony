{% extends 'base.html.twig' %}

{% block style %}
    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
{% endblock %}

{% block main %}

    <div class="container">

        <div class="row">

            <section class="features-icons bg-light text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 text-center">
                            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                                <i class="fa fa-4x fa-car" aria-hidden="true"></i>
                                <h3>Трафик информация</h3>
                                <p class="lead mb-0">Разберете къде има задръстване или проблем с проходимостта</p>
                            </div>
                        </div>
                        <div class="col-lg-4 text-center">
                            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                                <i class="fa fa-4x fa-globe" aria-hidden="true"></i>
                                <h3>Бъди информиран</h3>
                                <p class="lead mb-0">Новини, обяви, интересни случки от района на Дупница и Сапарева
                                    баня</p>
                            </div>
                        </div>
                        <div class="col-lg-4 text-center">
                            <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                                <i class="fa fa-4x fa-bullhorn" aria-hidden="true"></i>
                                <h3>Сподели</h3>
                                <p class="lead mb-0">Сподели със своите колеги, приятели, съграждани</p>
                                <a href="{{ path('article_create') }}" class="btn btn-primary text-center">Добави
                                    статия</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <div class="col-md-8">
                {% for article in articles %}
                    <br/>

                    <!-- Blog Post -->
                    <div class="card mb-4">

                        {% if article.image %}
                            <img class="img-fluid rounded" src="{{ asset('uploads/images/' ~ article.image) }}"
                                 width="750"
                                 height="300">
                        {% endif %}
                        <div class="card-body">
                            <h2 class="card-title">{{ article.title }}</h2>

                            <a href="{{ path('article_view', {'id': article.id}) }}" class="btn btn-primary">Прочети&rarr;</a>
                        </div>
                        <div class="card-footer text-muted">
                            Posted on {{ article.dateAdded|date("F jS \\a\\t g:ia") }} by
                            {{ article.author.fullName }}
                        </div>
                    </div>
                {% endfor %}
                <!-- Pagination -->
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                        <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Категории</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#">Трафик</a>
                                    </li>
                                    <li>
                                        <a href="#">Пътна обстановка</a>
                                    </li>
                                    <li>
                                        <a href="#">Обяви</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#">Новини</a>
                                    </li>
                                    <li>
                                        <a href="#">Интересно</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Side Widget</h5>
                    <div class="card-body">
                        You can put anything you want inside of these side widgets. They are easy to use, and feature
                        the new Bootstrap 4 card containers!
                    </div>
                </div>

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}