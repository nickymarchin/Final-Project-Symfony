{% extends 'base.html.twig' %}

{% block style %}
    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data"
                  action="{{ path('article_edit', {'id': article.id}) }}" method="POST">
                <fieldset>
                    <legend>Редактиране</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Заглавие</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_title" placeholder="Заглавие"
                                   name="article[title]" value="{{ article.title }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_content">Съдържание</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="article_content"
                                  name="article[content]">{{ article.content }}</textarea>
                        </div>
                    </div>

                    {% if article.image %}
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="article_image">Изображение</label>
                            <div class="col-sm-4 ">
                                <input type="file" accept=".jpg, .png, .jpeg" class="form-control" id="article_image"
                                       placeholder="Изображение"
                                       name="article[image]">
                            </div>
                        </div>
                    {% endif %}

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('article_view', {'id': article.id}) }}">Обратно</a>
                            <button type="submit" class="btn btn-primary">Редактиране</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}



